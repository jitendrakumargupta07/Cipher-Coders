ANSWER 1

#include <iostream>
using namespace std;

int main() {
    int N, sum = 0;
    cin >> N;
    for (int i = N; i >= 1; i--) sum += i;
    cout << sum << endl;
    return 0;
}


ANSWER 2

#include <iostream>
using namespace std;

int main() {
    int N;
    long long factorial = 1;
    cin >> N;
    while (N > 0) {
        factorial *= N;
        N--;
    }
    cout << factorial << endl;
    return 0;
}


ANSWER 3

#include <iostream>
using namespace std;

int main() {
    int N, i = 1;
    cin >> N;
    do {
        cout << N << " x " << i << " = " << N * i << endl;
        i++;
    } while (i <= 10);
    return 0;
}
